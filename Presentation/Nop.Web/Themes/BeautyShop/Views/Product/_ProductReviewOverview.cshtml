@model ProductReviewOverviewModel
@{
    var ratingPercent = 0;
    var noReviews = Model.TotalReviews == 0;
    if (!noReviews)
    {
        ratingPercent = ((Model.RatingSum * 100) / Model.TotalReviews) / 5;
    }
}

@if (Model.AllowCustomerReviews)
{
    <div class="product-reviews-overview">
        <div class="product-review-box">
            <div class="rating">
                <div style="width: @(ratingPercent)%">
                </div>
            </div>
        </div>

        <div class="product-review-links">
            @if (Model.TotalReviews > 0)
            {
                <a class="beautyShop-primary-color-hover" href="#productreviews">
                    @Model.TotalReviews
                    @T("Reviews.Overview.Reviews")
                </a>
            }

            @if (Model.CanAddNewReview && Model.CanCurrentCustomerLeaveReview)
            {
                <span class="separator">|</span>
                <a href="#addreview" class="beautyShop-primary-color-hover add-review @(noReviews ? "product-no-reviews" : "")">@T(noReviews ? "Reviews.Overview.First" : "Reviews.Overview.AddNew")</a>
            }
        </div>
    </div>
}