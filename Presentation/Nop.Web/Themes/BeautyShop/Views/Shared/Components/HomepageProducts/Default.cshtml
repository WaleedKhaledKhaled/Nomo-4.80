@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid home-page-product-grid">
        <div class="title beautyShop-secondery-color-text beautyShop-big-title">
            <strong>@T("Homepage.Products")</strong>
        </div>
        <div class="item-grid">
            @{var productCount = 0;}
            @foreach (var item in Model)
            {
                if (productCount < 8)
                {
                    <div class="item-box">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                }
                productCount++;
            }
        </div>
    </div>
}