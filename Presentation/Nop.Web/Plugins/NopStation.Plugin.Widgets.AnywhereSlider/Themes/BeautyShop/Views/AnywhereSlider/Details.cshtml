@model SliderModel
@inject Nop.Core.IWorkContext workContext
@{ 
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;
}

<div class="owl-carousel slider" id="slider-@(Model.Id)">
    @foreach (var sliderItemModel in Model.Items)
    {
        <div class="slider-item">
            <div class="slider-picture">
                <a href="@sliderItemModel.Link" title="@sliderItemModel.Title">
                    <img alt="@sliderItemModel.ImageAltText" src="@sliderItemModel.PictureUrl" title="" />
                </a>
            </div>
            <div class="slider-caption">
                <div class="slider-caption-inner">
                    <h3 class="slider-title">@sliderItemModel.Title</h3>
                    <h2 class="slider-subtitle">@sliderItemModel.ShortDescription</h2>

                    @if (!string.IsNullOrWhiteSpace(sliderItemModel.ShopNowLink))
                    {
                        <div class="shop-now-button">
                            <a href="@sliderItemModel.Link" class="slider-btn shop-now">@T("NopStation.AnywhereSlider.ShopNow")</a>
                        </div>
                    }
                </div>
            </div>
        </div>

    }
</div>


@if (Model.Id == 1)
{
    <script>
        $(document).ready(function () {
            $('#slider-@Model.Id').owlCarousel({
                nav: @Model.Nav.ToString().ToLower(),
                loop: @Model.Loop.ToString().ToLower(),
                dots: true,
                margin: @Model.Margin,
                autoplay: @Model.AutoPlay.ToString().ToLower(),
                rtl: @supportRtl.ToString().ToLower(),
                autoplayTimeout: @Model.AutoPlayTimeout,
                autoplayHoverPause: @Model.AutoPlayHoverPause.ToString().ToLower(),
                lazyLoad: @Model.LazyLoad.ToString().ToLower(),
                lazyLoadEager: @Model.LazyLoadEager,
                startPosition: @Model.StartPosition,
                animateOut: '@Model.AnimateOut',
                animateIn: '@Model.AnimateIn',
                responsive: {
                    0: {
                        items: 1
                    }
                }
            });
            $("#slider-1 .slider-btn").addClass("beautyShop-primary-color-bg ");
            $("#slider-1 h2.slider-subtitle").addClass("beautyShop-big-title beautyShop-primary-color-text");
        });
    </script>
}
else
{
    <script>
        $(document).ready(function () {
            $('#slider-@Model.Id').owlCarousel({
                nav: @Model.Nav.ToString().ToLower(),
                loop: @Model.Loop.ToString().ToLower(),
                dots: false,
                margin: @Model.Margin,
                autoplay: @Model.AutoPlay.ToString().ToLower(),
                rtl: @Model.RTL.ToString().ToLower(),
                autoplayTimeout: @Model.AutoPlayTimeout,
                autoplayHoverPause: @Model.AutoPlayHoverPause.ToString().ToLower(),
                lazyLoad: @Model.LazyLoad.ToString().ToLower(),
                lazyLoadEager: @Model.LazyLoadEager,
                startPosition: @Model.StartPosition,
                animateOut: '@Model.AnimateOut',
                animateIn: '@Model.AnimateIn',
                responsive: {
                    0: {
                        items: 1
                    },
                     567: {
                        items: 2
                    },
                     992: {
                        items: 3
                    }

                }
            });
            $("#slider-2 .slider-btn").addClass("beautyShop-primary-color-border");
            $("#slider-2 .slider-btn").addClass("beautyShop-primary-color-text");
            $("#slider-2").parent().addClass("beautyShop-slider-shopnow");
            $("#slider-2 h3.slider-title").addClass("beautyShop-secondery-color-text beautyShop-small-title ");
        });

    </script>

}

