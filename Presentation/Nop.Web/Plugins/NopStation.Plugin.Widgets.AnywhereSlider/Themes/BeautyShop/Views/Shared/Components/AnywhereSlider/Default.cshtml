@model SliderListModel

@foreach (var slider in Model.Sliders)
{
    var bg = slider.ShowBackgroundPicture ? $"style=\"background:url('{slider.BackgroundPictureUrl}') no-repeat center; background-size: cover;\"" : "";
    if (slider.ShowBackgroundPicture)
    {
        <div class="slider-bg" style="background:url('@slider.BackgroundPictureUrl') no-repeat center; background-size: cover;">
            <div class="slider-grid">
                <div class="slider-container slider-container-bg" data-sliderid="@slider.Id">
                    <div class="loader">
                        <div class="lds-ellipsis">
                            <div class="beautyShop-primary-color-bg"></div>
                            <div class="beautyShop-primary-color-bg"></div>
                            <div class="beautyShop-primary-color-bg"></div>
                            <div class="beautyShop-primary-color-bg"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="slider-grid">
            <div class="slider-container " data-sliderid="@slider.Id">
                <div class="loader">
                    <div class="lds-ellipsis">
                        <div class="beautyShop-primary-color-bg"></div>
                        <div class="beautyShop-primary-color-bg"></div>
                        <div class="beautyShop-primary-color-bg"></div>
                        <div class="beautyShop-primary-color-bg"></div>
                    </div>
                </div>
            </div>
        </div>
    }
}