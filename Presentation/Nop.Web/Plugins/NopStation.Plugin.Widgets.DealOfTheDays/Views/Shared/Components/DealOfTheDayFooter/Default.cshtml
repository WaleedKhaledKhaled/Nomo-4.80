@inject Nop.Core.IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;
    NopHtml.AppendScriptParts(ResourceLocation.Footer, $"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/script/owl.carousel.min.js");
    NopHtml.AppendScriptParts(ResourceLocation.Footer, $"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/script/jquery.countdown.min.js");
    NopHtml.AppendScriptParts(ResourceLocation.Footer, $"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/script/nopstation.dealsoftheday.js");

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts($"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/css/rtl/owl.theme.green.min.css",string.Empty);
        NopHtml.AppendCssFileParts($"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/css/rtl/owl.carousel.css",string.Empty);
    }
    else
    {
        NopHtml.AppendCssFileParts($"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/css/owl.theme.green.min.css",string.Empty);
        NopHtml.AppendCssFileParts($"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/css/owl.carousel.css",string.Empty);
    }
    NopHtml.AppendCssFileParts($"/Plugins/NopStation.Plugin.Widgets.DealOfTheDays/Contents/css/styles.css",string.Empty);
}
<script asp-location="Footer">
    var carouseldata = {};
    carouseldata.CarouselFailure = '@T("NopStation.DealOfTheDay.LoadingFailed")';

    $(document).ready(function () {
        DealOfTheDay.init('@Url.RouteUrl("DealOfTheDay")', '.dealoftheday-container', '.dealoftheday-container .loader', carouseldata);
    });
</script>