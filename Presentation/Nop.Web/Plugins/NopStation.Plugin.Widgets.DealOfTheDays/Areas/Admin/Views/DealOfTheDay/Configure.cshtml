@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    NopHtml.SetActiveMenuItemSystemName("DealOfTheDays.Configuration");
    ViewBag.PageTitle = T("Admin.NopStation.DealOfTheDays.Configuration").Text;
}

<form asp-controller="DealOfTheDay" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.DealOfTheDays.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="fa fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    
    <div class="content">
        <div class="form-horizontal">
            @await Component.InvokeAsync("StoreScopeConfiguration")
            <div asp-validation-summary="All"></div>
            <div class="cards-group">
                <div class="card panel-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="EnableDealOfTheDay_OverrideForStore" asp-input="EnableDealOfTheDay" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="EnableDealOfTheDay" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="EnableDealOfTheDay" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
