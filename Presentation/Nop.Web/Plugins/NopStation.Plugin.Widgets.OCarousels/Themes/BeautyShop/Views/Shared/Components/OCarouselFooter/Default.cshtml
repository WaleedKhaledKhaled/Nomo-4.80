@inject Nop.Core.IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;
    NopHtml.AppendScriptParts(ResourceLocation.Footer, $"/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/script/nopstation.carousel.js");

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts($"/Plugins/NopStation.Plugin.Widgets.OCarousels/Themes/BeautyShop/contents/css/styles.rtl.css",string.Empty);
    }
    else
    {
        NopHtml.AppendCssFileParts($"/Plugins/NopStation.Plugin.Widgets.OCarousels/Themes/BeautyShop/contents/css/styles.css",string.Empty);
    }
}

<script asp-location="Footer">
    var carouseldata = {};
    carouseldata.CarouselFailure = '@T("NopStation.OCarousels.LoadingFailed")';

    $(document).ready(function () {
        Carousel.init('@Url.RouteUrl("OCarousel")', '.carousel-container', '.carousel-container .loader', carouseldata);
    });
</script>